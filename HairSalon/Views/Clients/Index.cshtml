@{
  Layout = "_Layout";
}

@using HairSalon.Models

@if (Model.Count == 0)
{
  <h5>No clients have been added yet!</h5>
}
else
{
  <h2>Clients</h2>
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new client", "Create", "Clients")</p>
<p>@Html.ActionLink("View all stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Back home", "Index", "Home")</p>