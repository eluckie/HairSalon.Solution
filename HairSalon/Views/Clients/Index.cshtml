@{
  Layout = "_Layout";
}

@using HairSalon.Models

@if (Model.Count == 0)
{
  <h5 id="empty">No clients have been added yet!</h5>
  <p id="stylist-links">@Html.ActionLink("Add a new stylist", "Create", "Stylists")</p>
}
else
{
  <h2>Clients</h2>
  <ul>
    @foreach (Client client in Model)
    {
      <li><span id="name-link">@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId})</span> | <span id="specialty">@client.Stylist.Name</span></li>
    }
  </ul>
  <p id="client-links">@Html.ActionLink("Add a new client", "Create", "Clients")</p>
}

<p id="stylist-links">@Html.ActionLink("View all stylists", "Index", "Stylists")</p>
<h5 id="home-link">@Html.ActionLink("Back home", "Index", "Home")</h5>