@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit client</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br><br>
  @Html.LabelFor(model => model.Pronouns)
  @Html.TextBoxFor(model => model.Pronouns)
  <br><br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <br><br>
  <input type="submit" value="Update client" id="button">
}

<h5 id="home-link">@Html.ActionLink("Nevermind", "Index")</h5>
<h5 id="home-link">@Html.ActionLink("Back home", "Index", "Home")</h5>