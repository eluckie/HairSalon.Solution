@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>@Model.Name's Details</h2>

@if (@Model.Clients.Count == 0)
{
  <h5>No clients have been added to @Model.Name yet!</h5>
}
else
{
  <h2>Clients</h2>
  <ul>
    @foreach(Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId})</li>
    }
  </ul>
}

<hr>
<p>@Html.ActionLink($"Add a new client to {Model.Name}", "Create", "Clients")</p>
<p>@Html.ActionLink("View all stylists", "Index")</p>
<p>@Html.ActionLink("Back home", "Index", "Home")</p>