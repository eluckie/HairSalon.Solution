@{
  Layout = "_Layout";
}

@using HairSalon.Models;

@if (Model.Count == 0)
{
  <h5>No stylists have been added yet!</h5>
}
else
{
  <h2>Stylists</h2>
  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId}) | <span id="specialty">@stylist.Specialty</span></li>
    }
  </ul>
}
<hr>
<p>@Html.ActionLink("Add a new stylist", "Create", "Stylists")</p>
<p>@Html.ActionLink("Add a new client", "Create", "Clients")</p>
<p>@Html.ActionLink("View all clients", "Index", "Clients")</p>
<p>@Html.ActionLink("Back home", "Index", "Home")</p>